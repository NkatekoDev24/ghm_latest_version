<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title Text for Video 7 -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:fontFamily="@font/calibri_regular"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Congratulations Text -->
        <TextView
            android:id="@+id/congratulationsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="👏Congratulations on getting this far. You are doing well."
            android:textSize="24sp"
            android:textColor="@color/black"
            android:fontFamily="@font/calibri_regular"
            android:textStyle="bold" />

        <!-- Encouragement Text -->
        <TextView
            android:id="@+id/keepGoingTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="It is important to KEEP GOING."
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/calibri_regular"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Introduction to Video 7 -->
        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to Video 7. It shows essential corrections that you must make in your record-keeping to ensure you have a clear picture of the financial situation of your business."
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/calibri_regular"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvCombinedToc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:padding="20dp"
            android:background="@drawable/textbox_background"
            android:textSize="20sp"
            android:lineSpacingExtra="6dp"
            android:textColor="@color/black"
            android:fontFamily="@font/calibri_regular" />

        <!-- Next Button -->
        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watch Video 7"
            android:backgroundTint="@color/signup_button_default_color"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
