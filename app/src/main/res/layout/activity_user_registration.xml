<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <!-- Introduction Text -->
        <TextView
            android:id="@+id/video2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:fontFamily="@font/calibri_regular"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingBottom="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to Video 2. If you wish to continue watching and learning from the GMH videos, PLEASE REGISTER and tell us a bit about yourself and your business."
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/calibri_regular"
            android:textColor="@android:color/black"
            android:paddingBottom="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[PRIVACY: We gather this information only for research and to improve the training material. Your personal information will never be shared.]"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/calibri_regular"
            android:paddingBottom="16dp"
            android:textStyle="italic"/>

        <!-- User Information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Username"
            android:textSize="20sp"
            android:fontFamily="@font/calibri_regular"
            android:textColor="@android:color/black"/>
        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Create a username"
            android:background="@drawable/dotted_underline"
            android:minHeight="40dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your email address"
            android:textSize="20sp"
            android:fontFamily="@font/calibri_regular"
            android:textColor="@android:color/black"
            android:paddingTop="16dp"/>
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your email"
            android:background="@drawable/dotted_underline"
            android:minHeight="40dp"
            android:textSize="18sp"
            android:inputType="textEmailAddress"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cellphone number for app delivery &amp; communication"
            android:textSize="20sp"
            android:fontFamily="@font/calibri_regular"
            android:textColor="@android:color/black"
            android:paddingTop="16dp"/>
        <EditText
            android:id="@+id/etCellphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your cellphone number"
            android:background="@drawable/dotted_underline"
            android:minHeight="40dp"
            android:textSize="18sp"
            android:inputType="phone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your age"
            android:textSize="20sp"
            android:fontFamily="@font/calibri_regular"
            android:textColor="@android:color/black"
            android:paddingTop="16dp"/>
        <EditText
            android:id="@+id/etAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your age"
            android:background="@drawable/dotted_underline"
            android:minHeight="40dp"
            android:textSize="18sp"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your gender"
            android:textSize="20sp"
            android:fontFamily="@font/calibri_regular"
            android:textColor="@android:color/black"
            android:paddingTop="16dp"/>
        <RadioGroup
            android:id="@+id/rgGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rbFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textSize="16sp"/>
            <RadioButton
                android:id="@+id/rbMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="16sp"/>
            <RadioButton
                android:id="@+id/rbOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:textSize="16sp"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Highest level of education completed?"
            android:textSize="20sp"
            android:fontFamily="@font/calibri_regular"
            android:textColor="@android:color/black"
            android:paddingTop="16dp"/>

        <RadioGroup
            android:id="@+id/rgEducation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rbNoSchooling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No schooling / No formal education"
                android:textSize="16sp"/>
            <RadioButton
                android:id="@+id/rbSomePrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Some Primary education but less than Grade 7"
                android:textSize="16sp"/>
            <RadioButton
                android:id="@+id/rbPrimaryCompleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Primary education completed (Grade 7)"
                android:textSize="16sp"/>
            <RadioButton
                android:id="@+id/rbSomeSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Some Secondary education but less than Matric"
                android:textSize="16sp"/>
            <RadioButton
                android:id="@+id/rbMatric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Passed Matric (Grade 12)"
                android:textSize="16sp"/>
            <RadioButton
                android:id="@+id/rbMatricPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matric plus Diploma or Degree"
                android:textSize="16sp"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where is your business located?"
            android:textSize="20sp"
            android:fontFamily="@font/calibri_regular"
            android:textColor="@android:color/black"
            android:paddingTop="16dp"/>
        <EditText
            android:id="@+id/etCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City, Town or Village name?"
            android:background="@drawable/dotted_underline"
            android:minHeight="40dp"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Township or suburb name?"
            android:background="@drawable/dotted_underline"
            android:minHeight="40dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Province name?"
            android:textSize="20sp"
            android:fontFamily="@font/calibri_regular"
            android:textColor="@android:color/black"
            android:paddingTop="16dp"/>
        <Spinner
            android:id="@+id/spinnerProvince"
            android:layout_width="match_parent"
            android:background="@drawable/custom_spinner"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country name (if not South Africa)"
            android:textSize="20sp"
            android:fontFamily="@font/calibri_regular"
            android:textColor="@android:color/black"
            android:paddingTop="16dp"/>
        <EditText
            android:id="@+id/etCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your country name"
            android:background="@drawable/dotted_underline"
            android:minHeight="40dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Does your business have a name?"
            android:textSize="20sp"
            android:fontFamily="@font/calibri_regular"
            android:textColor="@android:color/black"
            android:paddingTop="16dp"/>
        <RadioGroup
            android:id="@+id/rgBusinessName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rbBusinessYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textSize="16sp"/>
            <RadioButton
                android:id="@+id/rbBusinessNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="16sp"/>
        </RadioGroup>

        <TextView
            android:id="@+id/tvBusinessNameFollowup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If yes: is the name displayed visibly on the outside of the business?"
            android:textSize="20sp"
            android:fontFamily="@font/calibri_regular"
            android:textColor="@android:color/black"
            android:paddingTop="16dp"/>
        <RadioGroup
            android:id="@+id/rgNameDisplayed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rbNameYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textSize="16sp"/>
            <RadioButton
                android:id="@+id/rbNameNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="16sp"/>
        </RadioGroup>

        <TextView
            android:id="@+id/tvBusinessName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is your business name (optional)?"
            android:textSize="20sp"
            android:fontFamily="@font/calibri_regular"
            android:textColor="@android:color/black"
            android:paddingTop="16dp"/>
        <EditText
            android:id="@+id/etBusinessName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your business name"
            android:background="@drawable/dotted_underline"
            android:minHeight="40dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What goods or services do the business provide? Describe the business in at least three words"
            android:textSize="20sp"
            android:fontFamily="@font/calibri_regular"
            android:textColor="@android:color/black"
            android:paddingTop="16dp"/>
        <EditText
            android:id="@+id/etBusinessDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Describe your business"
            android:background="@drawable/dotted_underline"
            android:minHeight="40dp"
            android:textSize="18sp"/>

        <!-- Achievement Shield Prompt -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📌 Please answer all these and other questions so that you can be rewarded with an Achievement Shield at the end of Part 1."
                android:textSize="16sp"
                android:fontFamily="@font/calibri_regular"
                android:textColor="@android:color/black"
                android:textStyle="italic"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Now for Video 2 in Part 1:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/calibri_regular"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tvCombinedToc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:padding="16dp"
            android:background="@drawable/textbox_background"
            android:textSize="18sp"
            android:lineSpacingExtra="6dp"
            android:textColor="@color/black"
            android:fontFamily="@font/calibri_regular" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watch video 2"
            android:backgroundTint="@color/signup_button_default_color"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
