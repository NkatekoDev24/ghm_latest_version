<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <!-- Introductory Text for Video 11 -->
    <TextView
        android:id="@+id/intro_text_video11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:fontFamily="@font/calibri_regular"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/intro_text_video11_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Video 11. In this last video in Part 3, we deal with a quite challenging category of costs."
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/calibri_regular"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/intro_text_video11_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="It is a crucial category if one wants to control costs (expenses). \nReplay the video as many times as you need to. \nYou must really understand the concepts and types of costs – and how they differ from variable costs."
        android:textSize="20sp"
        android:lineSpacingExtra="16dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/calibri_regular"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/intro_text_privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[PRIVACY: We gather this information only for research and to improve the training material. Your personal information will never be shared.]"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/calibri_regular"
        android:textStyle="italic"
        android:paddingBottom="16dp" />

    <!-- Questions -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regarding your current business premises:"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/calibri_regular"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <!-- Rent Business Premises Question -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you/your business rent it?"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/calibri_regular" />
    <RadioGroup
        android:id="@+id/radioGroupRent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <RadioButton
          android:id="@+id/radioRentYes"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Yes"
          android:textColor="@color/black"
          android:textSize="20sp"
          android:fontFamily="@font/calibri_regular" />
      <RadioButton
          android:id="@+id/radioRentNo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="No"
          android:textColor="@color/black"
          android:textSize="20sp"
          android:fontFamily="@font/calibri_regular" />
    </RadioGroup>

    <!-- Own Business Premises Question -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you/your business own it?"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/calibri_regular" />
    <RadioGroup
        android:id="@+id/radioGroupOwn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <RadioButton
          android:id="@+id/radioOwnYes"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Yes"
          android:textColor="@color/black"
          android:textSize="20sp"
          android:fontFamily="@font/calibri_regular" />
      <RadioButton
          android:id="@+id/radioOwnNo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="No"
          android:textColor="@color/black"
          android:textSize="20sp"
          android:fontFamily="@font/calibri_regular" />
    </RadioGroup>

    <!-- Use Free of Charge Premises Question -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The owner allows me to use it free of charge"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/calibri_regular" />
    <RadioGroup
        android:id="@+id/radioGroupFree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <RadioButton
          android:id="@+id/radioFreeYes"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Yes"
          android:textColor="@color/black"
          android:textSize="20sp"
          android:fontFamily="@font/calibri_regular" />
      <RadioButton
          android:id="@+id/radioFreeNo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="No"
          android:textColor="@color/black"
          android:textSize="20sp"
          android:fontFamily="@font/calibri_regular" />
    </RadioGroup>

    <!-- Other Arrangements Question -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other arrangements? Please describe"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/calibri_regular" />
    <EditText
        android:id="@+id/editTextOtherArrangements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dotted_underline"
        android:minHeight="40dp"
        android:layout_marginBottom="8dp"
        android:hint="Specify other arrangements" />

    <!-- Happy with Structure Question -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you happy with the structure (e.g. room, kiosk, stall) from which you do business?"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/calibri_regular" />
    <RadioGroup
        android:id="@+id/radioGroupStructure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <RadioButton
          android:id="@+id/radioStructureYes"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Yes"
          android:textColor="@color/black"
          android:textSize="20sp"
          android:fontFamily="@font/calibri_regular" />
      <RadioButton
          android:id="@+id/radioStructureNo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="No"
          android:textColor="@color/black"
          android:textSize="20sp"
          android:layout_marginBottom="8dp"
          android:fontFamily="@font/calibri_regular" />
    </RadioGroup>

    <!-- Happy with Location Question -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you happy with the location (position) in the township where your business is?"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/calibri_regular" />
    <RadioGroup
        android:id="@+id/radioGroupLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <RadioButton
          android:id="@+id/radioLocationYes"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Yes"
          android:textColor="@color/black"
          android:textSize="20sp"
          android:fontFamily="@font/calibri_regular" />
      <RadioButton
          android:id="@+id/radioLocationNo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="No"
          android:textColor="@color/black"
          android:textSize="20sp"
          android:fontFamily="@font/calibri_regular" />
    </RadioGroup>

    <!-- Reason for Not Moving Question -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If not happy, why don’t you move to better premises?"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/calibri_regular" />
    <EditText
        android:id="@+id/editTextMoveReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Reason for not moving"
        android:background="@drawable/dotted_underline"
        android:minHeight="40dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/calibri_regular" />

    <!-- Video Information Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's watch video 11 now."
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/calibri_regular"
        android:textColor="@android:color/black"
        android:paddingTop="24dp"
        android:paddingBottom="16dp" />

    <TextView
        android:id="@+id/tvCombinedToc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:padding="16dp"
        android:background="@drawable/textbox_background"
        android:textSize="20sp"
        android:lineSpacingExtra="6dp"
        android:textColor="@color/black"
        android:fontFamily="@font/calibri_regular" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let’s watch Video 11 now."
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/signup_button_default_color"
        android:paddingTop="16dp"
        android:paddingBottom="16dp" />

  </LinearLayout>
</ScrollView>
