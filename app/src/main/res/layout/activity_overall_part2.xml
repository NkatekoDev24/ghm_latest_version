<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header and Introduction -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="LOOKING BACK AT PART 2 WHICH YOU COMPLETED JUST NOW: \nCounting and Recording Money INFLOWS"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/calibri_regular"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="One question is whether this new knowledge can be, or has been, implemented by you in your business."
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/calibri_regular" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="[PRIVACY: We gather this information only for research and to improve the training material. Your personal information will never be shared.]"
            android:textSize="16sp"
            android:fontFamily="@font/calibri_regular"
            android:textColor="@android:color/black"
            android:textStyle="italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Looking back at the whole group of Videos 5 to 8 in Part 2:"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/calibri_regular" />

        <!-- Question 1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Have you made changes in the way you handle your businessâ€™s MONEY INFLOWS after watching them?"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:fontFamily="@font/calibri_regular" />

        <RadioGroup
            android:id="@+id/changes_inflows_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">
            <RadioButton
                android:id="@+id/inflows_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/calibri_regular"
                android:text="Yes" />
            <RadioButton
                android:id="@+id/inflows_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/calibri_regular"
                android:text="No" />
        </RadioGroup>

        <!-- Question 2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="If yes: which are the most important Good Money Habits you have adopted thus far? Explain briefly."
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:fontFamily="@font/calibri_regular" />

        <EditText
            android:id="@+id/important_habits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Type your answer here"
            android:background="@drawable/dotted_underline"
            android:minHeight="40dp" />

        <!-- Question 3 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="How do you feel about your progress?"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:fontFamily="@font/calibri_regular"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/progress_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
            <RadioButton
                android:id="@+id/progress_not_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/calibri_regular"
                android:text="Not good at all" />
            <RadioButton
                android:id="@+id/progress_okay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/calibri_regular"
                android:text="Okay" />
            <RadioButton
                android:id="@+id/progress_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/calibri_regular"
                android:text="Good" />
            <RadioButton
                android:id="@+id/progress_very_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/calibri_regular"
                android:text="Very good" />
        </RadioGroup>

        <!-- Question 4 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Have new habits helped you to make more money so far?"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:fontFamily="@font/calibri_regular" />

        <RadioGroup
            android:id="@+id/money_help_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
            <RadioButton
                android:id="@+id/help_not_yet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/calibri_regular"
                android:text="Not yet" />
            <RadioButton
                android:id="@+id/help_some_extent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/calibri_regular"
                android:text="To some extent" />
            <RadioButton
                android:id="@+id/help_large_extent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/calibri_regular"
                android:text="To a large extent" />
            <RadioButton
                android:id="@+id/help_plenty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/calibri_regular"
                android:text="Plenty" />
        </RadioGroup>

        <!-- Additional Comments -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Do you have any other comments or suggestions on the entire group of videos 5 to 8 \n(i.e. those in Part 2)?"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:fontFamily="@font/calibri_regular" />

        <EditText
            android:id="@+id/part2_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Type your comments here"
            android:background="@drawable/dotted_underline"
            android:minHeight="40dp" />

        <!-- Submission Button -->
        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Submit"
            android:backgroundTint="@color/signup_button_default_color"
            android:padding="8dp"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
