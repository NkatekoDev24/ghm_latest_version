<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Main Content Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title for Video 8 -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/calibri_regular"
            android:textColor="@color/black"
            android:text="VIDEO 8"
            android:layout_marginBottom="16dp" />

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to Video 8, which is for businesses that have fewer transactions per day, e.g., a hair salon, tyre repair shop, or car wash."
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/calibri_regular"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Combined Text -->
        <TextView
            android:id="@+id/tvCombinedToc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:padding="16dp"
            android:background="@drawable/textbox_background"
            android:textSize="20sp"
            android:lineSpacingExtra="6dp"
            android:textColor="@color/black"
            android:fontFamily="@font/calibri_regular" />

        <!-- Next Button -->
        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watch Video 8"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/signup_button_default_color"
            android:textColor="@android:color/white" />

    </LinearLayout>

</ScrollView>
