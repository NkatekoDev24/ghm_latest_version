            android:fontFamily="@font/calibri_regular"
            android:paddingBottom="8dp"
            android:textColor="@color/black" />

        <RatingBar
            android:id="@+id/rating_overall"
            android:layout_width="wrap_content"
            android:progressTint="#FFD700"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:rating="0.0"/>

        <!-- Interest Question -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How keen would you be to get more videos on other financial or management topics?"
            android:textSize="20sp"
            android:fontFamily="@font/calibri_regular"
            android:paddingBottom="8dp"
            android:textColor="@color/black" />

        <RatingBar
            android:id="@+id/keen_overall"
            android:layout_width="wrap_content"
            android:progressTint="#FFD700"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:rating="0.0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Which specific topics or issues?"
            android:textSize="20sp"
            android:fontFamily="@font/calibri_regular"
            android:paddingBottom="8dp"
            android:textColor="@color/black" />

        <!-- Topics Input Field -->
        <EditText
            android:id="@+id/etTopics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type your answer here"
            android:background="@drawable/dotted_underline"
            android:minHeight="40dp"
            android:layout_marginBottom="16dp" />

        <!-- End of Series Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:fontFamily="@font/calibri_regular"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:text="END OF SERIES 4"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Continue Button -->
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Certificate"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/signup_button_default_color"
